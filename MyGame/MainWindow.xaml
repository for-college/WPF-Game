<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="Виселица" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/fon.jpg" Opacity="90.5"/>
    </Window.Background>
    <Grid Background="#66000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="2" Background="White" CornerRadius="10" Height="30" VerticalAlignment="Bottom" Width="290">
            <TextBlock TextAlignment="Center"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="24" FontStyle="Italic" FontWeight="Bold" Foreground="#FF00FFE2" Height="38" Width="290">
            Весёлая игра Виселица
            </TextBlock>
        </Border>
        <TextBlock 
            Grid.Row="5" Grid.Column="4" 
            Width="70" Background="#FF00FFE2" 
            TextAlignment="Center"
            Foreground="Black" Text="V1.4" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <Button Grid.Column="4" 
                VerticalAlignment="Top"
                Height="30" Width="45" Content="Выход" Background="White" BorderBrush="Red" Foreground="Red" Click="CloseWindow" 
                HorizontalAlignment="Right" />
        <Button Grid.Row="3"  Grid.Column="1" 
                Width="90" Height="40" 
                Panel.ZIndex="1" HorizontalAlignment="Left" 
                Content="Автор"  BorderBrush="#FF00FFE2" Background="#F8FFFFFF" Foreground="#FF00FFE2" 
                FontWeight="Bold" FontSize="16" 
                Click="OpenAuthorWindow" />


        <Button Grid.Column="3" 
                Grid.Row="3" 
                Content="Правила"
                HorizontalAlignment="Right" 
                Width="90" Height="40" 
                VerticalAlignment="Center" 
                Click="ShowRules" Background="#FDFFFFFF" BorderBrush="#FF00FFE2" Foreground="#FF00FFE2" 
                FontWeight="Bold" FontSize="16" Panel.ZIndex="1"/>

        <Button Grid.Column="2" 
                Grid.Row="3" 
                Content="Играть" 
                Width="90" Height="40" BorderBrush="#FF00FFE2" Background="#F8FFFFFF" Foreground="#FF00FFE2" FontWeight="Bold" FontSize="16" Panel.ZIndex="1"/>

        <Label Grid.Row="2" 
               Grid.Column="1" 
               Content="Игрок 1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Height="40"
               FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2" Panel.ZIndex="1" Grid.RowSpan="2"/>
        <TextBox 
            x:Name="player1"
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Width="100" Height="20" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Bottom" Panel.ZIndex="1"/>

        <Label Grid.Row="2" 
               Grid.Column="3" 
               Grid.RowSpan="2"
               Content="Игрок 2"
               Height="40"
               HorizontalAlignment="Center"
               VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2" Panel.ZIndex="1"/>
        <TextBox x:Name="player2"
                 Grid.Row="2" 
                 Grid.Column="3" 
                 Width="100" Height="20"
                 VerticalAlignment="Bottom" HorizontalAlignment="Center" Panel.ZIndex="1"/>
        <Border Grid.Row="2" Grid.RowSpan="3" CornerRadius="25" Grid.Column="1" Grid.ColumnSpan="3" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#7F43B2C1" Offset="0.01"/>
                    <GradientStop Color="#7F00535D" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</Window>
