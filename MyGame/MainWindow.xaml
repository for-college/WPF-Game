<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="Виселица" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/fon.jpg" Opacity="90.5"/>
    </Window.Background>
    <Grid Background="#3F000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="24" FontStyle="Italic" FontWeight="Bold" Foreground="#FF00FFE2">
            Весёлая игра Виселица
        </TextBlock>
        <TextBlock 
            Grid.Row="5" Grid.Column="2" 
            Width="70"
            HorizontalAlignment="Center" Background="#FF00FFE2" 
            Foreground="Black" VerticalAlignment="Bottom" Text="       V1.4"/>
        <Button Grid.Column="2" Height="20" Width="45" Content="Выход" Background="White" BorderBrush="Red" Foreground="Red" Click="Button_Click_1"></Button>
        <Button Grid.Row="5" Height="30" Content="Автор" Background="White" BorderBrush="Red" Foreground="Red"></Button>

        <Button Grid.Column="1" 
                Grid.Row="4" 
                Content="Правила"
                Width="90" Height="40" 
                VerticalAlignment="Bottom" 
                Click="ShowRules" Background="#00DDDDDD" BorderBrush="#FF00FFE2" Foreground="#FF00FFE2"/>

        <Button Grid.Column="1" 
                Grid.Row="3" 
                Content="Играть" 
                Width="90" Height="40" BorderBrush="#FF00FFE2" Background="Transparent" Foreground="#FF00FFE2"/>

        <Label Grid.Row="2" 
               Grid.Column="1" 
               Content="Игрок 1"
               HorizontalAlignment="Left"
               Height="40"
               VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2"/>
        <TextBox Grid.Row="2" 
                 Grid.Column="1" 
                 Width="100" Height="40" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Bottom"/>

        <Label Grid.Row="2" 
               Grid.Column="1" 
               Content="Игрок 2"
               Height="40"
               HorizontalAlignment="Right"
               VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2"/>
        <TextBox Grid.Row="2" 
                 Grid.Column="1" 
                 Width="100" Height="40"
                 VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
