<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="Виселица" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/fon.jpg" Opacity="90.5"/>
    </Window.Background>
    <Grid Background="#66000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="80"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Background="White" CornerRadius="10" Height="36" VerticalAlignment="Top" Margin="116,4,116,0">
            <TextBlock VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="24" FontStyle="Italic" FontWeight="Bold" Foreground="#FF00FFE2" Height="37" Width="280">
            Весёлая игра Виселица
            </TextBlock>
        </Border>
        <TextBlock 
            Grid.Row="5" Grid.Column="2" 
            Width="70"
            HorizontalAlignment="Left" Background="#FF00FFE2" 
            Foreground="Black" VerticalAlignment="Bottom" Text="       V1.4" Margin="10,0,0,0"/>
        <Button Grid.Column="2" Height="30" Width="45" Content="Выход" Background="White" BorderBrush="Red" Foreground="Red" Click="Button_Click_1" Margin="35,0,0,10"></Button>
        <Button Grid.Row="5" Height="30" Content="Автор" Background="White" BorderBrush="Red" Foreground="Red" Margin="0,60,0,0" Click="OpenAuthorWindow"></Button>

        <Button Grid.Column="1" 
                Grid.Row="4" 
                Content="Правила"
                Width="90" Height="40" 
                VerticalAlignment="Bottom" 
                Click="ShowRules" Background="#FDFFFFFF" BorderBrush="#FF00FFE2" Foreground="#FF00FFE2" FontWeight="Bold" FontSize="16"/>

        <Button Grid.Column="1" 
                Grid.Row="3" 
                Content="Играть" 
                Width="90" Height="40" BorderBrush="#FF00FFE2" Background="#F8FFFFFF" Foreground="#FF00FFE2" FontWeight="Bold" FontSize="16"/>

        <Label Grid.Row="2" 
               Grid.Column="1" 
               Content="Игрок 1"
               HorizontalAlignment="Left"
               Height="40"
               VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2"/>
        <TextBox x:Name="player1"
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Width="100" Height="20" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Bottom"/>

        <Label Grid.Row="2" 
               Grid.Column="1" 
               Content="Игрок 2"
               Height="40"
               HorizontalAlignment="Right"
               VerticalAlignment="Top" FontSize="18" FontWeight="Bold" Foreground="#FF00FFE2"/>
        <TextBox x:Name="player2"
                 Grid.Row="2" 
                 Grid.Column="1" 
                 Width="100" Height="20"
                 VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
